@model EquipmentModel
@{
    ViewData["Title"] = "Edit Equipment";
}

<h1>Edit Equipment</h1>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Edit">
                @Html.AntiForgeryToken()
                <div class="mb-3">
                    <label asp-for="NameE" class="form-label">NameE</label>
                    <input asp-for="NameE" type="text" class="form-control">
                </div>
                <div class="mb-3">
                    <label asp-for="Quantity" class="form-label">Quantity</label>
                    <input asp-for="Quantity" type="text" class="form-control">
                </div>
                
                <div class="form-group">
                    <label for="exampleFormControlSelect1">IsActive</label>
                    <select class="form-control" id="exampleFormControlSelect1">
                        <option>Yes</option>
                        <option>No</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Edit</button>
            </form>
        </div>
    </div>
