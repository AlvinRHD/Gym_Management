@model EquipmentModel

@{
    ViewData["Title"] = "New Equipment";
}

<h1>New Equipment</h1>
<hr />

<div class="row">
    <div class="col-md-12">
        <form asp-action="Equipment">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="NameE" class="control-label"></label>
                <input asp-for="NameE" class="form-control" />
                <span asp-validation-for="NameE" class="text-danger"></span>
            </div>
            <div class="form-group mb-3">
                <label asp-for="Quantity" class="control-label"></label>
                <input asp-for="Quantity" class="form-control" />
                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <label for="exampleFormControlSelect1">IsActive</label>
                <select class="form-control" id="exampleFormControlSelect1">
                    <option>Yes</option>
                    <option>No</option>
                </select>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />

                <a asp-action="Index">Return to list</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}