@model IEnumerable<EmployeeModel>
    @{
    ViewData["Title"] = "List Employee";
    }

    <h1>List Employee</h1>

    <div class="container">
        <div class="row">
            <div class="col-md-12">

                <div class="mt-3 mb-3">
                    <a asp-action="Create" asp-controller="Employee" class="btn btn-success">
                        New Employee
                    </a>
                </div>

                <table class="table table-bordered table-striped table-responsive" id="employeeTable">
                    <thead>
                        <tr>
                            <th>EmployeeID</th>
                            <th>FirstName</th>
                            <th>LastName</th>
                            <th>DateOfBirth</th>
                            <th>IsActive</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var employee in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(item => employee.EmployeeID)</td>
                            <td>@Html.DisplayFor(item => employee.FirstName)</td>
                            <td>@Html.DisplayFor(item => employee.LastName)</td>
                            <td>@Html.DisplayFor(item => employee.DateOfBirth)</td>
                            <td>@Html.DisplayFor(item => employee.IsActive)</td>
                            <td>
                                <a asp-controller="Employee"
                                   asp-action="Edit"
                                   asp-route-id="@employee.EmployeeID"
                                   class="btn btn-primary">
                                    Edit
                                </a>
                                <a asp-controller="Employee"
                                   asp-action="Delete"
                                   asp-route-id="@employee.EmployeeID"
                                   class="btn btn-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                    </tbody>
                </table>

            </div>
        </div>
    </div>

